<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="32dp"
        android:gravity="center"
        tools:context=".ui.LoginActivity">

        <!-- Features Section (Left side) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="32dp"
            android:gravity="center_vertical">

            <!-- App Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/logo_gradient_bg"
                    android:gravity="center"
                    android:text="W"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="WordMaster"
                    android:textColor="@color/text_primary"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Main Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="効率的な英単語学習で\nレベルアップしよう"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="start"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="最新の学習理論に基づいた、あなた専用の英語学習プラットフォーム"
                android:textSize="20sp"
                android:textColor="@color/text_secondary"
                android:gravity="start"
                android:layout_marginBottom="40dp"
                android:lineSpacingExtra="4dp" />

            <!-- Features List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/feature_check_bg"
                        android:gravity="center"
                        android:text="✓"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="🚀 科学的な単語記憶メソッドで効率学習"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/feature_check_bg"
                        android:gravity="center"
                        android:text="✓"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="🎯 個人の学習ペースに合わせたカスタマイズ"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/feature_check_bg"
                        android:gravity="center"
                        android:text="✓"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="🎮 ゲーム感覚で楽しく継続できるシステム"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/feature_check_bg"
                        android:gravity="center"
                        android:text="✓"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="📊 詳細な進捗追跡と成果の可視化"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </LinearLayout>

            <!-- Statistics Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✨ 学習者の実績"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1,247+"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color"
                                android:layout_marginBottom="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="平均学習単語数"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:gravity="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="89%"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="@color/accent_color"
                                android:layout_marginBottom="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="平均正答率"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:gravity="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="42日"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#F59E0B"
                                android:layout_marginBottom="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="平均継続日数"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Login Form Card (Right side) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="480dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E5E7EB">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="40dp">

                <!-- Logo and App Name inside card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/logo_gradient_bg"
                        android:gravity="center"
                        android:text="W"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="WordMaster"
                        android:textColor="@color/text_primary"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

                <!-- App Icon -->
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/logo_gradient_bg"
                    android:gravity="center"
                    android:text="W"
                    android:textColor="@android:color/white"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone" />

                <!-- Title -->
                <TextView
                    android:id="@+id/tvFormTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ログイン"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="アカウントにログインして学習を続ける"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dp" />

                <!-- Error Message -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/errorCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:visibility="gone"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#FEF2F2"
                    app:strokeWidth="1dp"
                    app:strokeColor="#FCA5A5">

                    <TextView
                        android:id="@+id/tvError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="エラーメッセージ"
                        android:textSize="14sp"
                        android:textColor="#DC2626" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Username Input -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ユーザー名"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:hint="ユーザー名を入力"
                    app:startIconDrawable="@android:drawable/ic_menu_manage"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/text_secondary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:padding="16dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email Input (for registration) -->
                <TextView
                    android:id="@+id/tvEmailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="メールアドレス"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:hint="メールアドレスを入力"
                    android:visibility="gone"
                    app:startIconDrawable="@android:drawable/ic_dialog_email"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/text_secondary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:padding="16dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Input -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="パスワード"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:hint="パスワードを入力"
                    app:startIconDrawable="@android:drawable/ic_lock_lock"
                    app:endIconMode="password_toggle"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/text_secondary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:padding="16dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirm Password Input (for registration) -->
                <TextView
                    android:id="@+id/tvConfirmPasswordLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="パスワード確認"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:hint="パスワードを再入力"
                    android:visibility="gone"
                    app:startIconDrawable="@android:drawable/ic_lock_lock"
                    app:endIconMode="password_toggle"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/text_secondary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:padding="16dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Remember Me and Forgot Password -->
                <LinearLayout
                    android:id="@+id/layoutLoginOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="32dp">

                    <CheckBox
                        android:id="@+id/cbRememberMe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ログイン状態を保持"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:buttonTint="@color/primary_color" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="パスワードを忘れた場合"
                        android:textSize="16sp"
                        android:textColor="@color/primary_color"
                        android:textStyle="bold"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="8dp" />

                </LinearLayout>

                <!-- Login/Register Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="24dp"
                    android:text="ログイン"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_gradient_selector"
                    android:textColor="@android:color/white"
                    android:elevation="2dp"
                    android:stateListAnimator="@null" />

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/primary_color"
                    android:visibility="gone"
                    android:layout_marginBottom="24dp" />

                <!-- Divider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#E5E7EB" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text="または"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#E5E7EB" />

                </LinearLayout>

                <!-- Social Login Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="GITHUB"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        app:strokeColor="#E5E7EB"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_github"
                        app:iconSize="18dp"
                        app:iconTint="@color/text_primary" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="GOOGLE"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        app:strokeColor="#E5E7EB"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_google"
                        app:iconSize="18dp"
                        app:iconTint="@null" />

                </LinearLayout>

                <!-- Register/Login Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvToggleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="アカウントをお持ちでない方は "
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvToggleLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新規登録"
                        android:textSize="16sp"
                        android:textColor="@color/primary_color"
                        android:textStyle="bold"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="4dp" />

                </LinearLayout>

                <!-- Terms and Privacy -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="続行することで、利用規約およびプライバシーポリシーに同意したものとみなします。"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView> 